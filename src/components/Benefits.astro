---
const benefits = [
  {
    title: "Convenience",
    description:
      "No travel, no waiting rooms, no hassle. We come to you at a time that fits your schedule.",
    icon: "fa-solid fa-clock", // Clock icon
  },
  {
    title: "Comfort",
    description:
      "Relax in familiar surroundings while receiving professional care from our gentle phlebotomists.",
    icon: "fa-solid fa-couch", // Comfort-related icon (couch)
  },
  {
    title: "Privacy",
    description:
      "Enjoy complete privacy and confidentiality with our discreet home service.",
    icon: "fa-solid fa-user-secret", // Privacy icon
  },
  {
    title: "Safety",
    description:
      "Reduce exposure to illnesses in waiting rooms, especially important for immunocompromised patients.",
    icon: "fa-solid fa-shield", // Shield for safety
  },
  {
    title: "Expertise",
    description:
      "Our phlebotomists are specialists with extensive experience in venipuncture techniques.",
    icon: "fa-solid fa-star", // Star icon for expertise
  },
  {
    title: "Accessibility",
    description:
      "Ideal for patients with mobility issues, busy professionals, or anyone who values convenience.",
    icon: "fa-solid fa-wheelchair", // Accessibility icon
  },
];
---

<section id="benefits" class="benefits">
  <div class="container">
    <div class="section-header">
      <h2>Why Choose Gentle Touch</h2>
      <p>Experience the benefits of mobile phlebotomy services</p>
    </div>

    <div class="benefits-grid">
      {
        benefits.map((benefit) => (
          <div class="benefit-card">
            <div class="benefit-icon">
              <i class={`${benefit.icon}`} />
            </div>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
